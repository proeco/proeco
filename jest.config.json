{
  "preset":"ts-jest",
  "testEnvironment":"node",
  "roots":[
    "<rootDir>/src"
  ],
  "testPathIgnorePatterns":[
    "<rootDir>/.next/",
    "<rootDir>/node_modules/"
  ],
  "transform":{
    "^.+\\.(ts|tsx)$":"ts-jest"
  },
  "moduleFileExtensions":[
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "globals":{
    "ts-jest":{
      "tsconfig":"<rootDir>/test/tsconfig.jest.json"
    }
  },
  "moduleNameMapper": {
    "^~/(.*)$": "<rootDir>/src/$1"
  },
  "testMatch": ["<rootDir>/src/**.spec.ts"]
}
